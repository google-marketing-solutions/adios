{
  "ignore": [
    "**/.claspignore",
    "**/.editorconfig",
    "**/.eslintignore",
    "**/.gitignore",
    "**/.gitkeep",
    "**/.prettierignore",
    "**/*.txt",
    "**/.github",
    "CONTRIBUTING",
    "build",
    "dist"
  ],
  "license": "license-header.txt",
  "licenseFormats": {
    "js|ts|mjs": {
      "prepend": "/**",
      "append": " */",
      "eachLine": {
        "prepend": " * "
      }
    },
    "html|md": {
      "prepend": "<!--",
      "append": "-->"
    },
    "sh|^pre-commit": {
      "eachLine": {
        "prepend": "# "
      }
    }
  },
  "trailingWhitespace": "TRIM"
}
